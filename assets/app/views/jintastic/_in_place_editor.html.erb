<div class="in_place_editor_wrapper">
  <%= content_tag container_tag, default_tag_text, content_tag_options %>
  <% semantic_form_for path_spec_or_object, form_tag_options do |f| %>
    <% f.inputs do %>
      <% if input_attributes %>
        <% input_attributes.each do |attr| %>
          <% unless formtastic_attributes.nil? or formtastic_attributes.empty? %>
            <%= f.input attr, formtastic_attributes %>
          <% else %>
            <%= f.input attr %>          
          <% end %>
        <% end %>
      <% else %>
        <%= render :partial=>form_partial, :locals=>{:f=>f} %>
      <% end %>
    <% end %>
    <%= submit_tag 'Grabar', :class=>'in_place_save' %>
    <input type='button' value='Cancelar' class='in_place_cancel' />
  <% end %>
</div>
